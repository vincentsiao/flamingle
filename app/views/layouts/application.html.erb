<!DOCTYPE html>
<html>
<head>
  <title>Flamingle</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,300,400,600,700,800' rel='stylesheet' type='text/css'>
  
</head>
<body>

<div id='header'>
	<div id='container'>
		<div id='logo'></div>
		<div id='menu'>
			<ul>
				<li><a id='dashboard' href="/dashboard"></a></li>
				<li><a id='missions' href="/missions"></a></li>
				<li id='menu_end'></li>
			</ul>
		</div>
	</div>
</div>

<% flash.each do |name, msg| %>
<div class='message'>
  <%= content_tag(:span, msg, :id => "flash_#{name}") %>
</div>
<% end %>

<div id='content_top'></div>
<div id='content'>
	<div id='container'>
		<div id='leftbar'>
		
			<div id="auth">
			  <% if user_signed_in? %>
			    Logged in as <%= current_user.username %>
			    <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
			  <% else %>
			    <%= link_to "Register", new_user_registration_path %> 
			    or 
			    <%= link_to "Login", new_user_session_path %>
			  <% end %>
			</div>
			
		</div>
		<div id='rightbar'>
		
			<%= yield %>
			
		</div>
	</div>
</div>
<div id='content_bottom'></div>


</body>
</html>
